@using UniqloMVC.Models;
@model IEnumerable<Product>;
<a type="button" class="btn btn-success mb-3" asp-area="Admin" asp-controller="Product" asp-action="Create">Create Slider</a>

<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">DataTables Example</h6>



    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Title</th>
                        <th>Price</th>
                        <th>ImgUrl</th>
                    </tr>
                </thead>
                <tfoot>
                    @foreach (Product item in @Model)
                    {
                        <tr>
                            <th>@item.Id</th>
                            <th>@item.Title</th>
                            <th>@item.Price</th>
                            <td><img src="~/img/@item.ImgUrl" width="50" /></td>>
                            <td><a class="btn btn-primary" asp-controller="Product" asp-action="Update" asp-route-id="@item.Id" asp-area="Admin">Update</a></td>
                            <td><a class="btn btn-danger" asp-controller="Product" asp-action="Delete" asp-route-id="@item.Id" asp-area="Admin">Delete</a></td>
                        </tr>
                    }

                </tfoot>


            </table>
        </div>
    </div>
</div>

<!-- /.container-fluid -->
